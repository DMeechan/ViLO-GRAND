{
  "name": "vilo-api-server",
  "version": "0.0.1",
  "description": "ViLO GraphQL API server, connected to a Neo4j database",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "./node_modules/.bin/nodemon --exec babel-node src/index.js",
    "build": "babel src -d build; cp .env build/; cp src/schema/schema.graphql build/schema/",
    "now-build": "babel src -d build; cp .env build/; cp src/schema/schema.graphql build/schema/",
    "start": "npm run build && node build/index.js",
    "seedDb": "./node_modules/.bin/babel-node src/seed/seed-db.js"
  },
  "author": "Daniel Meechan",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-http": "^1.5.14",
    "apollo-server": "^2.4.8",
    "apollo-server-express": "^2.4.8",
    "dotenv": "^7.0.0",
    "graphql-tag": "^2.10.1",
    "neo4j-driver": "^1.7.3",
    "neo4j-graphql-js": "^2.5.0",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "nodemon": "^1.18.11"
  }
}
